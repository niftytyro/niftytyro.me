---
export interface Props {
	title: string;
	description: string;
	publishDate: string;
	url: string;
}

const { title, description, publishDate, url } = Astro.props as Props;
---

<a href={url}>
  <div class="flex flex-col xl:flex-row xl:justify-between items-stretch w-full rounded-2xl border border-polarnight100 bg-polarnight80 hover:bg-polarnight100 hover:border-snowstorm100">
    <article class="flex-1 px-16 py-8">
      <p class="text-snowstorm100 text-lg font-semibold mb-6">{publishDate}</p>
      <h1 class="text-3xl font-semibold mb-4">{title}</h1>
      <p class="text-xl">{description}</p>
    </article>
    <img class="w-full xl:w-1/3 rounded-r-2xl" src="https://res.cloudinary.com/kentcdodds-com/image/upload/w_1517,q_auto,f_auto,b_rgb:e6e9ee/unsplash/photo-1604845029162-cfa4b9a1550f" />
  </div>
</a>
