---
export interface Props {
	title: string;
	description: string;
	publishDate: string;
	url: string;
}

const { title, description, publishDate, url } = Astro.props as Props;
---

<a href={url}>
  <article class="my-8">
    <header>
      <time class="text-l">{publishDate}</time>
      <a>
        <h1 class="text-2xl">{title}</h1>
      </a>
    </header>
    <p class="text-xl">{description}</p>
  </article>
</a>
